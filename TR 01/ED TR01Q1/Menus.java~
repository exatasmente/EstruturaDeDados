
/**
 * Classe Menu Herda da Classe Programa os Métodos Usados
 * 
 * @author Luiz 
 * @version 30/08/2016
 */
import java.util.Scanner;
public class Menus extends Programa
{
    public static  int r=0;
    public static  Scanner input = new Scanner (System.in);
    public static void Menu()
    {
        System.out.println("VEÍCULOS\n1->Cadastrar Veiculo\n2->Alterar Veículo\n3->Voltar");
        r= input.nextInt();
        if(r==1)
            CadVeiculos();
        if(r==2)
            AltVeiculos();
        if(r==3)
            Menu();    
    }
    
}
